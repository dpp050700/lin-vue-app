{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": { "*": ["types/*"] },
    "target": "es6",
    "allowJs": true,
    "experimentalDecorators": true,
    "strict": true,
    "module": "commonjs",
    "moduleResolution": "node"
  },
  "include": [
    "types/**/*",
    "src/**/*",
    "example/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}